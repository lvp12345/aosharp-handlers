<?xml version="1.0" standalone="yes"?>
<root>
  <View v_alignment="TOP" h_alignment="LEFT" view_layout="horizontal" name="SimpleMain" layout_borders="Rect(10,10,10,10)" size="Rect(0,0,600,450)">
    <!-- First Column: Original Research Manager Controls -->
    <View v_alignment="TOP" h_alignment="LEFT" view_layout="vertical" layout_borders="Rect(5,5,5,5)" size="Rect(0,0,280,420)">
      <TextView value="Research Manager" layout_borders="Rect(5,5,5,5)" color="0xFFFFFFFF"/>
      <TextView value=" " layout_borders="Rect(5,5,5,5)"/>
      <OptionCheckBox label="Enabled" opt_category="AOSharp" opt_type="variant" opt_variable="Research__Toggle" layout_borders="Rect(10,1,5,1)"/>
      <OptionCheckBox label="Include Apotheosis" opt_category="AOSharp" opt_type="variant" opt_variable="Research__IncludeApotheosis" layout_borders="Rect(10,1,5,1)"/>
      <View v_alignment="TOP" h_alignment="LEFT" view_layout="vertical" layout_borders="Rect(5,5,5,5)">
        <OptionRadioButtonGroup label="Mode" h_alignment="LEFT" layout_borders="Rect(10,1,5,1)" opt_type="variant" opt_variable="Research__ModeSelection">
          <RadioButton label="Lowest first" value="0"/>
          <RadioButton label="Highest first" value="1"/>
        </OptionRadioButtonGroup>
      </View>
    </View>
    <!-- Second Column: Current Research Levels -->
    <View v_alignment="TOP" h_alignment="LEFT" view_layout="vertical" layout_borders="Rect(5,5,5,5)" size="Rect(0,0,300,420)">
      <TextView value="Current Research Levels" layout_borders="Rect(5,5,5,5)" color="0xFFFFFFFF"/>

      <!-- Apotheosis Research Section -->
      <TextView value="Apotheosis Research:" layout_borders="Rect(5,2,5,2)" color="0xFFFFFF00"/>
      <TextView name="apotheosis1" value="Apotheosis 1: Loading..." layout_borders="Rect(10,1,5,1)" color="0xFFFFFFFF"/>
      <TextView name="apotheosis2" value="Apotheosis 2: Loading..." layout_borders="Rect(10,1,5,1)" color="0xFFFFFFFF"/>
      <TextView name="apotheosis3" value="Apotheosis 3: Loading..." layout_borders="Rect(10,1,5,1)" color="0xFFFFFFFF"/>
      <TextView name="apotheosis4" value="Apotheosis 4: Loading..." layout_borders="Rect(10,1,5,1)" color="0xFFFFFFFF"/>
      <TextView name="apotheosis5" value="Apotheosis 5: Loading..." layout_borders="Rect(10,1,5,1)" color="0xFFFFFFFF"/>

      <!-- Profession Research Section -->
      <TextView value="Profession Research:" layout_borders="Rect(5,0,5,0)" color="0xFFFFFF00"/>
      <TextView name="profResearch1" value="Research 1: Loading..." layout_borders="Rect(10,1,5,1)" color="0xFFFFFFFF"/>
      <TextView name="profResearch2" value="Research 2: Loading..." layout_borders="Rect(10,1,5,1)" color="0xFFFFFFFF"/>
      <TextView name="profResearch3" value="Research 3: Loading..." layout_borders="Rect(10,1,5,1)" color="0xFFFFFFFF"/>
      <TextView name="profResearch4" value="Research 4: Loading..." layout_borders="Rect(10,1,5,1)" color="0xFFFFFFFF"/>
      <TextView name="profResearch5" value="Research 5: Loading..." layout_borders="Rect(10,1,5,1)" color="0xFFFFFFFF"/>
      <TextView name="profResearch6" value="Research 6: Loading..." layout_borders="Rect(10,1,5,1)" color="0xFFFFFFFF"/>
      <TextView name="profResearch7" value="Research 7: Loading..." layout_borders="Rect(10,1,5,1)" color="0xFFFFFFFF"/>
    </View>
  </View>
</root>
